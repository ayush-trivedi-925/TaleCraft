<% layout("layouts/main") %>
<h1>Stories</h1>
<div class="row">
  <% for (story of stories){ %> <% if (story) { %>
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image"><%- editIcon(story.user, user, story._id) %></div>
      <div class="card-content center-align">
        <h5><%= story.title %></h5>
        <p><%= stripTags( truncate(story.body, 150) ) %></p>
        <br />
        <div class="chip">
          <img src="<%= story.user.image %>" alt="" />
          <a href="/stories/user/<%= user._id %>"
            ><%= story.user.displayName %></a
          >
        </div>
      </div>
      <div class="card-action center-align">
        <a href="/stories/<%= story._id %>" class="btn gray">Read More</a>
      </div>
    </div>
  </div>
  <% } else { %>
  <p>No stories to display</p>
  <% } %> <% } %>
</div>
